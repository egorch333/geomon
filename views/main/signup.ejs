<h4 class="text-center">Sign up</h4>

 <% if (typeof signupMessage !== 'undefined' && signupMessage.length > 0) { %>
<div class="alert alert-danger"><%= signupMessage %></div>
<% } %>



<div class="col-sm-6 col-sm-offset-3">

    <form id="form-signup" class="form-signup" role="form" method="post" action="/signup">
        <div class="row">
            <div class="form-group col-sm-10 col-sm-offset-1">
                <label for="email" class="sr-only">Email address</label>
                <input type="email" id="email" name="email" class="form-control input-sm" placeholder="Email" required autofocus>
            </div>
            <div class="form-group col-sm-10 col-sm-offset-1">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control input-sm" placeholder="Password" required>
            </div>
            <div class="form-group col-sm-10 col-sm-offset-1">
                <label for="confirm" class="sr-only">Confirm password</label>
                <input type="password" id="confirm" name="confirm" class="form-control input-sm" placeholder="Confirm password">
            </div>
            <div class="form-group col-sm-10 col-sm-offset-1">
                <label for="name" class="sr-only">Name</label>
                <input type="text" id="name" name="name" class="form-control input-sm" placeholder="Name (optional)">
            </div>
            <div class="col-sm-10 col-sm-offset-1">
                <button class="btn btn-sm btn-primary btn-block" type="submit">Sign up</button>
            </div>
        </div>
    </form>

</div>

<script type="text/javascript">
    $(document).ready(function () { $('#form-signup #email').focus(); })
</script>

<%- contentFor('title') %>
Sign up